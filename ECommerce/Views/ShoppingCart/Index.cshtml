@model ECommerce.Models.ShoppingCart

<h2>Shopping Cart</h2>

@if (Model != null && Model.Products.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Your shopping cart is empty.</p>
}

<a asp-action="Index" asp-controller="Home">Continue Shopping</a>