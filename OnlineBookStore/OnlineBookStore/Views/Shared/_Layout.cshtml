<!doctype html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - OnlineBookStore</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"/>
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container">
    <a class="navbar-brand" href="/">BookStore</a>
    <div>
      <a class="nav-link text-white" href="/books">Books</a>
      <a class="nav-link text-white" href="/Cart">Cart</a>
      @if (User.Identity?.IsAuthenticated ?? false)
      {
          <span class="text-white mx-2">Hello, @User.Identity!.Name (@User.FindFirst("role")?.Value)</span>
          <a class="btn btn-sm btn-outline-light" asp-page="/Account/Logout">Logout</a>
      }
      else
      {
          <a class="btn btn-sm btn-outline-light me-2" asp-page="/Account/Login">Login</a>
          <a class="btn btn-sm btn-light" asp-page="/Account/Register">Register</a>
      }
    </div>
  </div>
</nav>
<div class="container mt-4">
    @RenderBody()
</div>
</body>
</html>
